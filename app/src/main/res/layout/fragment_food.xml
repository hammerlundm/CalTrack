<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content"
                                                   tools:context=".FoodFragment" android:orientation="vertical">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_text" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="18sp" android:text="Name"/>
    <TextView
            android:text="@string/calorie_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/name_text"
            app:layout_constraintEnd_toStartOf="@+id/name_text"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calorie_text" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/name_text"
            app:layout_constraintStart_toEndOf="@+id/name_text"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <TextView
            android:text="@string/carbs_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView16" app:layout_constraintStart_toStartOf="@+id/textView14"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView14" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="@+id/textView14"/>
    <TextView
            android:text="20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/carb_text" app:layout_constraintEnd_toEndOf="@+id/calorie_text"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/calorie_text"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintStart_toStartOf="@+id/calorie_text"/>
    <TextView
            android:text="@string/fat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView18" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView16" app:layout_constraintStart_toStartOf="@+id/textView16"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="@+id/textView16"/>
    <TextView
            android:text="40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fat_text" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/carb_text" app:layout_constraintEnd_toEndOf="@+id/carb_text"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintStart_toStartOf="@+id/carb_text"/>
    <TextView
            android:text="@string/protein_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView20" app:layout_constraintStart_toStartOf="@+id/textView18"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView18" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="@+id/textView18"/>
    <TextView
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/protein_text" app:layout_constraintEnd_toEndOf="@+id/fat_text"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/fat_text"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintStart_toStartOf="@+id/fat_text"/>
</androidx.constraintlayout.widget.ConstraintLayout>