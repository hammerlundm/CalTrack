<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FoodListActivity" android:orientation="vertical">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/list"
            android:gravity="center_horizontal|center_vertical">
        <TextView
                android:text="@string/empty_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/empty_text"/>
    </LinearLayout>
</ScrollView>